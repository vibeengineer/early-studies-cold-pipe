{
  "name": "early-studies-cold-pipe",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "process": "tsx scripts/process-apollo-csv.ts",
    "analyze": "tsx scripts/analyze-apollo-csv.ts",
    "types": "npx wrangler types",
    "db:generate": "drizzle-kit generate --config=./src/database/drizzle.config.ts",
    "db:migrate": "npx wrangler d1 migrations apply early-studies-cold-pipe-database --remote",
    "db:migrate:local": "npx wrangler d1 migrations apply early-studies-cold-pipe-database",
    "db:studio": "drizzle-kit studio --config=./src/database/drizzle.config.ts",
    "db:seed": "npx wrangler d1 execute early-studies-cold-pipe-database --file=src/database/seed.sql --remote",
    "db:seed:local": "npx wrangler d1 execute early-studies-cold-pipe-database --file=src/database/seed.sql",
    "db:scaffold": "pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
    "db:scaffold:local": "pnpm run db:generate && pnpm run db:migrate:local && pnpm run db:seed:local"
  },
  "dependencies": {
    "@ai-sdk/google": "^1.2.18",
    "@cloudflare/playwright": "^0.0.10",
    "@hono/zod-validator": "^0.4.3",
    "@libsql/client": "^0.15.5",
    "@scalar/hono-api-reference": "^0.8.8",
    "@types/minimist": "^1.2.5",
    "@types/papaparse": "^5.3.16",
    "ai": "^4.3.15",
    "cloudflare": "^4.2.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.42.0",
    "hono": "^4.7.9",
    "hono-openapi": "^0.4.8",
    "limiter": "^3.0.0",
    "minimist": "^1.2.8",
    "nanoid": "^5.1.5",
    "papaparse": "^5.5.2",
    "pino": "^9.6.0",
    "tsx": "^4.19.4",
    "zod": "^3.24.4",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.27",
    "@types/neverbounce": "^4.2.4",
    "@types/node": "^22.15.17",
    "@vitest/ui": "^3.1.3",
    "drizzle-kit": "^0.31.1",
    "miniflare": "^4.20250507.0",
    "prettier": "3.5.3",
    "vitest": "~3.0.9",
    "wrangler": "^4.14.4"
  }
}